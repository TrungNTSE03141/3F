<script>
    var x = document.getElementById("txtYourLocation");

    function getLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition);
        } else {
            x.innerHTML = "Geolocation is not supported by this browser.";
        }
    }

    //TrungNT START
    //Show your location
    function showPosition(position) {
        //x.innerHTML = "Latitude: " + position.coords.latitude +
        //"<br>Longitude: " + position.coords.longitude;
        //TrungNT Call Webservice through AJAX
        var url = "http://localhost:52779/3FWebService.asmx";
        $.ajax({
            type: "POST",
            url: url + "/ReverseDecoding",
            data: JSON.stringify({ longitude: position.coords.longitude, latitude: position.coords.latitude }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: OnSuccessCall,
            error: OnErrorCall
        });

        function OnSuccessCall(response) {
            x.innerHTML = " You are here: " + response.d;
        }

        function OnErrorCall(response) {
            alert("Error");
        }
    }
    //TrungNT END

    //TrungNT START
    //Using ajax to share your location on system
    function ShareYourLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(Share);
        } else {
            x.innerHTML = "Geolocation is not supported by this browser.";
        }

        function Share(position) {
            //var userId = @Model.Id.ToString();
            var userId = "asdjashjdas";
            $.ajax({
                type: "POST",
                url: '@Url.Action("TestAJAX", "UserLocation")',
                contentType: "application/json; charset=utf-8",
                data: { userId: userId, longitude: position.coords.longitude, latitude: position.coords.latitude },
                dataType: "json",
                success: OnSuccessCall,
                error: OnErrorCall
            });

            function OnSuccessCall(response) {
                x.innerHTML = response.d;
            }
            function OnErrorCall(response) {
                alert("Error");
            }
        }
    }
    //TrungNT END
    var isMapsApiLoaded = false;
    function InitializeMap() {
        //If google map is loaded then do nothing
        if (isMapsApiLoaded)
            return;
        //Get Your coordinate
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(CreateMarker);
        } else {
            x.innerHTML = "Geolocation is not supported by this browser.";
        }
        //Create marker on goole map
        function CreateMarker(position) {
            google.maps.visualRefresh = true;
            var mapOptions = {
                zoom: 17,
                center: { lat: position.coords.latitude, lng: position.coords.longitude },
                mapTypeId: google.maps.MapTypeId.G_NORMAL_MAP
            };
            var map = new google.maps.Map(document.getElementById("mapShowLocation"), mapOptions);
            var maker = new google.maps.Marker({
                'position': new google.maps.LatLng(position.coords.latitude, position.coords.longitude),
                'map': map,
                'title': "Your are here"
            });
            // mapOptions.center = new google.maps.LatLng(position.coords.latitude, position.coords.longitude);
            // map.setOptions(mapOptions);
            isMapsApiLoaded = true;
        }
    }


    //TrungNT AJAX Send request friends START

    function addFriend() {
        var url = '@Url.Action("RequestFriend", "Relationship", new { userId = Model.Id},null)';
        $.get(url, null, function (response) {
            if (response == "True") {
                $("#btnRelationship").html("Friend Request Sent");
            }

        });
    }

    //TrungNT AJAX Send request friends START

    //TrungNT AJAX Cancel request friends START
    function cancelRequestFriend() {
        var url = '@Url.Action("CancelRequest", "Relationship", new { userId = Model.Id},null)';
        $.get(url, null, function (response) {
            if (response == "True") {
                $("#btnRelationship").html("Add Friend");
            }

        });
    }
    //TrungNT AJAX Cancel request friends END

    //TrungNT AJAX request unfriends START
    function requestUnFriend() {
        var url = '@Url.Action("UnFriend", "Relationship", new { userId = Model.Id},null)';
        $.get(url, null, function (response) {
            if (response == "True") {
                $("#btnRelationship").html("Add Friend");
            }

        });
    }
    //TrungNT AJAX request unfriends END


    //TrungNT AJAX confirm request friend START
    function confirmRequestFriend() {
        var url = '@Url.Action("AcceptRequest", "Relationship", new { userId = Model.Id},null)';
        $.get(url, null, function (response) {
            if (response == "True") {
                $("#btnRelationship").html("Friends");
                document.getElementById('btnDeleteRequest').outerHTML = "";
            }

        });
    }
    //TrungNT AJAX confirm request friend END

    //TrungNT AJAX delete request friend START
    function RejectRequest() {
        var url = '@Url.Action("RejectRequest", "Relationship", new { userId = Model.Id},null)';
        $.get(url, null, function (response) {
            if (response == "True") {
                $("#btnRelationship").html("Add Friend");
                document.getElementById('btnDeleteRequest').outerHTML = "";
            }

        });
    }
    //TrungNT AJAX delete request friend END

    //TrungNT AJAX Update Relationship START

    function updateRelationship() {
        var message = document.getElementById('btnRelationship').innerHTML;
        if (message === "Add Friend") {
            addFriend();
        } else if (message === "Friend Request Sent") {
            cancelRequestFriend();
        } else if (message === "Friends") {
            requestUnFriend();
        } else if (message === "Confirm") {
            confirmRequestFriend();
        }
    }
    //TrungNT AJAX Update Relationship END





</script>

